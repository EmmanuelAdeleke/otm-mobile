<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.emmanueladeleke.studentform.OQuestion">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:textSize="20dp"
        android:id="@+id/tvOpenQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:text="@string/hello_blank_fragment" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:id="@+id/bSubmitA"
            android:onClick="submitAnswer"
            android:textColor="#FFF"
            android:text="Submit Answer"
            android:background="#285180"
            android:layout_width="match_parent"
            android:layout_height="36dp" />

        <Button
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:id="@+id/bSubmitB"
            android:onClick="submitAnswer"
            android:textColor="#FFF"
            android:text="Submit Answer"
            android:background="#285180"
            android:layout_width="match_parent"
            android:layout_height="36dp" />

        <Button
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:id="@+id/bSubmitC"
            android:onClick="submitAnswer"
            android:textColor="#FFF"
            android:text="Submit Answer"
            android:background="#285180"
            android:layout_width="match_parent"
            android:layout_height="36dp" />

        <Button
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:id="@+id/bSubmitD"
            android:onClick="submitAnswer"
            android:textColor="#FFF"
            android:text="Submit Answer"
            android:background="#285180"
            android:layout_width="match_parent"
            android:layout_height="36dp" />

    </LinearLayout>

</LinearLayout>
